/* pages/list/list.wxss */
.isplay{
  margin:0% 0% 15% 0%;
  padding:0% 3% 0% 3%;
  height:15%;
  float: left;
  width: 92vw;
  position:fixed; 
  top:0;
  background-color: #fff;
}
.time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height:1rem;
  margin-top: 0.9rem;
  font-size: 1rem;
}
.top_sticky{
  margin-bottom: 30%;
}
.article_list{
  width: 92vw;
  height: 3rem;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom:0.5px solid  #f8f8f8;
  margin-bottom: 1rem;
}
.article_list_left{
  display: flex;
  flex-direction:column;
  /* justify-content: space-between; */
  width: 75vw;
}
.title{
  width: 75vw;
  font-weight:bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.author{
  width: 75vw;
  margin-top: 4px;
  font-size:12px;
  color:#ccc
}
.article_list_right{
  align-items:center;
  width: 10vw;
}
.play_button_img{
  width: 2rem;
  height: 2rem;
}